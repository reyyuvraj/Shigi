<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="vertical"
    tools:context=".newAcc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account,"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="24dp"
        android:textSize="32sp"
        android:gravity="left"
        android:textColor="@color/Welcome"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up to get started!"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="24dp"
        android:textSize="26sp"
        android:gravity="left"
        android:textColor="@color/sign"
        android:layout_marginBottom="5dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:hint="Full Name"
            android:textColor="@color/Email_ID_color"
            android:textColorHint="#7A8089" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/create_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:hint="Email ID"
            android:textColor="@color/Email_ID_color"
            android:textColorHint="#7A8089" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/create_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:hint="Password"
            android:textColor="@color/Email_ID_color"
            android:textColorHint="#7A8089" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/create_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/back"
        android:text="Login"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/create_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/back"
        android:text="Connect with Facebook"
        android:drawableLeft="@drawable/facebooklogo"
        android:paddingLeft="80dp"
        android:paddingRight="70dp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="11">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="I'm already a member, "
            android:textSize="16sp"
            android:gravity="right"
            android:textColor="@color/Welcome"/>

        <TextView
            android:id="@+id/create_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="Sign in"
            android:textSize="16sp"
            android:gravity="left"
            android:textColor="@color/Welcome"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>