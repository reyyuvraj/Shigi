<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="vertical"
    tools:context=".activity.DocDetail">


    <ImageButton
        android:id="@+id/details_back"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="24dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:maxWidth="45dp"
        android:maxHeight="45dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_name"/>

    <com.example.shigi.displaydoctordata.RoundRectCornerImageView
        android:id="@+id/doctor_pfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="24dp"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="170dp"
        android:minWidth="70dp"
        android:minHeight="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/doctor6" />

    <TextView
        android:id="@+id/doctor_speciality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="Cardiologist"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/Welcome"/>

    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="Dr. Alan C Brave"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/Welcome"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardElevation="0dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/back3"
                        android:maxWidth="70dp"
                        android:maxHeight="100dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/messenger"
                        android:padding="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardElevation="0dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/back"
                        android:maxWidth="70dp"
                        android:maxHeight="100dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/call"
                        android:padding="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardElevation="0dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/back3"
                        android:maxWidth="70dp"
                        android:maxHeight="100dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/videocall"
                        android:padding="15dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="2dp"
                app:cardElevation="0dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/back"
                        android:maxWidth="70dp"
                        android:maxHeight="100dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/placeholder"
                        android:padding="15dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="About"
        android:gravity="left"
        android:textSize="30sp"
        android:textColor="@color/Welcome"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/doctor_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="20dp"
        android:text="Dr. Alan C. Brave is a cardiologist in Saint Louis, Missouri and is affiliated with multiple hospitals in the area."/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedules"
            android:textSize="30sp"
            android:textColor="@color/Welcome"
            android:textStyle="bold"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/month_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="January"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="right"
            android:paddingTop="11dp"
            android:paddingRight="20dp"
            android:layout_weight="1" />

    </LinearLayout>

    <CalendarView
        android:id="@+id/appointment_date"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/doctor_schedule"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            app:cardElevation="0dp"
            android:background="@drawable/back">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/back2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_schedule"
                    android:padding="25dp" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/doctor_appointment"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="3"
            android:background="@drawable/forappointment"
            android:text="Appointment"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white_background"/>

    </LinearLayout>

</LinearLayout>